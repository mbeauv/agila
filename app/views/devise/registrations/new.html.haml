- content_for :work_header_title do
  Sign up

- content_for :work_header_actions do
  = link_to "Back", :back, { class: button_class(:alternate, :normal) }
  %input{ type: "submit", value: "Sign Up", form: "new_user", class: button_class(:primary, :normal) }

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource

  .field
    = f.label :email
    %br
    = f.email_field :email, autofocus: true, autocomplete: "email"

  .field
    = f.label :username
    %br
    = f.text_field :username, autofocus: true, autocomplete: "username"

  .field
    = f.label :password
    - if @minimum_password_length
      %em (#{@minimum_password_length} characters minimum)
    %br
    = f.password_field :password, autocomplete: "new-password"

  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation, autocomplete: "new-password"


= render "devise/shared/links"
