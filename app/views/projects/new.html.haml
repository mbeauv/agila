-# app/views/projects/new.html.haml

%h1 New Project

= form_for @project do |f|
  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :description
    = f.text_area :description

  .field
    = f.label :status
    = f.select :status, Project.statuses.keys.map { |status| [status.humanize, status] }

  .field
    = f.label :start_date
    = f.date_select :start_date

  .actions
    = f.submit

= link_to 'Back', projects_path