%div{ class: 'relative overflow-x-auto shadow-md sm:rounded-lg' }
  %table{ class: 'w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400' }
    = render partial: 'layouts/table_header', locals: { header_names: [ 'Name', 'Description', 'Status', 'Start Date', 'End Date' ] }
    %tbody
      - projects.each do |project|
        %tr{ class: 'odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700' }
          %td{ class: 'px-6 py-4' }= link_to project.name, project_path(project)
          %td{ class: 'px-6 py-4' }= project.description
          %td{ class: 'px-6 py-4' }= project.status.humanize
          %td{ class: 'px-6 py-4' }= project.start_date
          %td{ class: 'px-6 py-4' }= project.end_date
